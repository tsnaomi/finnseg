{
    "language": "Finnish",  // title case
    "code": "fi",  // lowercase

    // These Wikitionary URLs are not required by `Extract` but it's nice to
    // have them here for safe-keeping.
    "en_url": "https://en.wiktionary.org/wiki/Category:Finnish_language",
    "lang_url": "https://fi.wiktionary.org",

    // "AFFIXES" lists the names of different types of affixes (lowercase) in
    // English AND  in the target language. This list is used to determine if
    // a particular string is a word or an affix. Any affix type that is not
    // listed here will not be considered an affix in `Extract`.
    "AFFIXES": [
        "prefix",
        "prefiksit",    // prefix
        "infix",
        "infiksit",     // infix
        "suffix",
        "suffiksit"     // suffix
    ],

    // Ideally, "POS" includes all of the part-of-speech categories (lowercase)
    // listed in Wiktionary for the target language. Any POS category not
    // included below that `Extract` encounters will throw an ExtractionError.
    // TODO: Only include wanted POS categories.
    "POS": [
        // content words
        "noun",
        "verb",
        "adjective",
        "adverb",

        // affixes
        "prefix",
        "suffix",

        // function words
        "conjunction",
        "interjection",
        "numeral",
        "postposition",
        "preposition",
        "pronoun",
        "proper noun",  // whatever

        // phrases
        "phrase",
        "proverb",

        // particles, clitics, etc.
        "clitic",
        "particle",
        "root",

        // misc.
        "abbreviation",
        "acronym",
        "initialism"
    ],

    // "TAGS" includes a mapping from POS categories to POS tags. Words with
    // a POS category not mapped below will not be extracted.
    "TAGS": {
        "adjective": "ADJ",
        "adverb": "ADV",
        "conjunction": "CONJ",
        "interjection": "UH",
        "noun": "N",
        "numeral": "NUM",
        "postposition": "POST",
        "preposition": "P",
        "pronoun": "PRO",
        "verb": "V"
    }
}